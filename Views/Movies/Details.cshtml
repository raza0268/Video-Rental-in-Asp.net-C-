@model Vidly.Web.Models.Movie
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
@{ 
    var releaseDate = Model.ReleaseDate.HasValue ? Model.ReleaseDate.Value.ToString() : "";
    var dateAdded = Model.AddedDate.HasValue ? Model.AddedDate.Value.ToString() : "";

}
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @releaseDate</li>
    <li>Date Added: @dateAdded</li>
    <li>Number in Stock: @Model.NumberInStock</li>

</ul>

